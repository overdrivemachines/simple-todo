<h4 class="d-flex justify-content-between mb-4">
  <span>Tasks</span>
  <%= link_to 'New Task', new_task_path, class: 'btn btn-primary' %>
</h4>

<ul class="list-group">
  <% @tasks.each do |task| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= task.title %>
      <div>
        <span class="badge badge-primary badge-pill"><%= task.priority_string %></span>
        <span class="badge badge-primary badge-pill"><%= task.completed ? "Completed" : "Not Complete" %></span>
      </div>
    </li>
  <% end %>
  <li class="list-group-item">
    <%= link_to 'New Task', new_task_path, class: 'btn btn-primary' %>
  </li>
</ul>